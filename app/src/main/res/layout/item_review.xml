<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewUsuario"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/channel" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewNombreUsuarioReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Nombre de usuario"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rBCalificacionReview"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:numStars="5"
            android:padding="1dp"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNombreUsuarioReview"
            android:text="Título de la reseña" />

        <TextView
            android:id="@+id/textViewDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitulo"
            android:text="Descripción de la reseña" />

        <TextView
            android:id="@+id/textViewCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescripcion"
            android:text="Calificación de la reseña" />

        <TextView
            android:id="@+id/textViewFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCalificacion"
            android:text="Fecha de la reseña" />

        <Button
            android:id="@+id/btn_LikeReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewFecha"
            android:layout_alignParentEnd="true"
            android:text="Like" />



    </RelativeLayout>

</LinearLayout>
