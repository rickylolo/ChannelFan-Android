<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivFilm"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/suzume" />

    <TextView
        android:id="@+id/tvFilmName"
        android:layout_width ="wrap_content"
        android:layout_height ="wrap_content"
        tools:text="Hola"
        app:layout_constraintTop_toBottomOf="@id/ivFilm"
        app:layout_constraintStart_toStartOf="@id/ivFilm"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width ="wrap_content"
        android:layout_height ="wrap_content"
        tools:text="Hola"
        app:layout_constraintTop_toBottomOf="@id/tvFilmName"
        app:layout_constraintStart_toStartOf="@id/ivFilm"/>



</androidx.constraintlayout.widget.ConstraintLayout>