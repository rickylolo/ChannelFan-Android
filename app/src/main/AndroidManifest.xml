<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.channelfan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/channelfanlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/channelfanlogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChannelFan"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.MovieDetail"
            android:exported="true" />
        <activity
            android:name=".activities.Admin"
            android:exported="true" />
        <activity
            android:name=".activities.Genre"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Review"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Movie"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Favorites"
            android:exported="true" />
        <activity
            android:name=".activities.Search"
            android:exported="true" />
        <activity
            android:name=".activities.Profile"
            android:exported="true" />
        <activity
            android:name=".activities.Home"
            android:exported="true" />
        <activity
            android:name=".activities.User"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>